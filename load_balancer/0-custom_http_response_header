#!/usr/bin/env bash
# Configure Nginx server to redirect requests to /redirect_me to another page and add a custom response header

set -e

# Validate user input for server name
read -p "Enter server name: " server_name
if [[ ! $server_name =~ ^[a-zA-Z0-9.-]+\.[a-zA-Z]{2,}$ ]]; then
  echo "Invalid domain name"
  exit 1
fi

# Install Nginx
apt-get update -y
apt-get install -y nginx

# Configure Nginx
cat <<EOF > /etc/nginx/sites-available/default
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name $server_name;
    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;
    add_header X-Served-By \$server_name;

    location /redirect_me {
        return 301 http://example.com/;
    }
}
EOF

# Restart Nginx
systemctl restart nginx
